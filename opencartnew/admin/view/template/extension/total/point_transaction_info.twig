{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_info }}</h3>
      </div>
      <div class="panel-body">
        <div class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ text_customer_name }}</label>
            <div class="col-sm-10 form-control-static">
              {{ name }}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ text_type }}</label>
            <div class="col-sm-10 form-control-static">
              {{ transaction_types[type] ?? type|capitalize }}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ text_order_id }}</label>
            <div class="col-sm-10 form-control-static">
              {{ order_id }}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ text_description }}</label>
            <div class="col-sm-10 form-control-static">
              {{ description }}
              {% if type == 'aflex_award' and aflex_sales_invoice_url %}
              <br>
              <a href="{{ aflex_sales_invoice_url }}" target="_blank">{{ text_view_invoice }}</a>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ text_points }}</label>
            <div class="col-sm-10 form-control-static">
              {{ points }}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ text_refunded }}</label>
            <div class="col-sm-10 form-control-static">
              {{ refunded }}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ text_date_added }}</label>
            <div class="col-sm-10 form-control-static">
              {{ date_added }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }} 