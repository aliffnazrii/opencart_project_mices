{{ header }}{{ column_left }}
<div id="content">
<div class="page-header">
  <div class="container-fluid">
     <div class="pull-right">
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
    <h1>{{ text_sms_otp }}</h1>
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>
<div class="container-fluid">{% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-filter"></i> {{ text_filter }}</h3>
        </div>
        <div class="panel-body">
          <div class="form-group col-sm-4">
            <label class="control-label" for="input-filter_sales_invoice_no">{{ entry_phone }}</label>
            <input type="text" name="filter_phone_number" value="{{ filter_phone_number }}" placeholder="{{ entry_phone }}" id="input-filter_phone_number" class="form-control" />
          </div>
           <div class="form-group text-right col-sm-12">
            <button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ button_filter }}</button>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_sms_otp }}</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td class="text-left">{{ column_phone_number }}</td>
                  <td class="text-left">{{ column_code }}</td>
                  <td class="text-left">{{ column_created_at }}</td>
                  <td class="text-left">{{ column_expired_at }}</td>
                </tr>
              </thead>
              <tbody>
              {% if sms_otps %}
              {% for sms_otp in sms_otps %}
              <tr>
                <td class="text-left">{{ sms_otp.phone_number }}</td>
                <td class="text-left">{{ sms_otp.code }}</a></td>
                <td class="text-left">{{ sms_otp.created_at }}</td>
                <td class="text-left">{{ sms_otp.expired_at }}</td>
              </tr>
              {% endfor %}
              {% else %}
              <tr>
                <td class="text-center" colspan="8">{{ text_no_results }}</td>
              </tr>
              {% endif %}
            </tbody>
            </table>
          </div>
          <div class="row">
            <div class="col-sm-6 text-left">{{ pagination }}</div>
            <div class="col-sm-6 text-right">{{ results }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
$('#button-filter').on('click', function() {
	url = '';

	var filter_phone_number = $('input[name=\'filter_phone_number\']').val();

	if (filter_phone_number) {
		url += '&filter_phone_number=' + encodeURIComponent(filter_phone_number);
	}

  location = 'index.php?route=extension/module/phone_verification/smsOtp&user_token={{ user_token }}' + url;
});
//--></script> 
{{ footer }} 